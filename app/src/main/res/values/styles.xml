<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- ################## progress style begin ################## -->
    <style name="circleProgressTheme" parent="android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:color">@color/colorAccent</item>
    </style>

    <style name="circleProgressStyle" parent="android:Widget.ProgressBar" />

    <style name="horizontalProgressStyle" parent="Base.Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/widget_horizontal_progress</item>
    </style>

    <!-- progress style end -->

    <style name="raiseButtonStyle" parent="Widget.AppCompat.Button.Colored" />

    <!--activity animation start-->
    <style name="activityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/anim_right_in</item>
        <item name="android:activityCloseEnterAnimation">@anim/anim_left_in</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_left_out</item>
        <item name="android:activityCloseExitAnimation">@anim/anim_right_out</item>
    </style>

    <style name="ActivityAnimation" parent="android:Theme.Light">
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!--activity animation end-->

    <!--activity animation end-->
    <style name="dialogBottomStyle">
        <item name="android:windowEnterAnimation">@anim/anim_dialog_bottom_enter</item>
        <item name="android:windowExitAnimation">@anim/anim_dialog_bottom_exit</item>
    </style>

    <style name="dialogAlphaStyle">
        <item name="android:windowEnterAnimation">@anim/anim_dialog_alpha_enter</item>
        <item name="android:windowExitAnimation">@anim/anim_dialog_alpha_exit</item>
    </style>
    <!--activity animation end-->

</resources>
